{% extends 'base.html.twig' %}

{% block title %}Logs index{% endblock %}

{% block body %}
    <h1>Logs index for {{ user }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Last Login</th>
                <th>IP</th>
                <th>Status</th>
                <th>Reason</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.last_login }}</td>
                <td>{{ log.ip }}</td>
                <td>{{ log.success }}</td>
                <td>{{ log.reason }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
